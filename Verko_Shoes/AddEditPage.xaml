<Page x:Class="Verko_Shoes.AddEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Verko_Shoes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddEditPage" FontFamily="Times New Roman">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Название товара " Grid.Column="0" Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Center"/>
        <TextBox Text="{Binding ProductName}" Grid.Column="1" Grid.Row="0" Width="190" Height="25" HorizontalAlignment="Left" TextAlignment="Left" VerticalContentAlignment="Center"/>

        <TextBlock Text="Артикул " Grid.Column="0" Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Center"/>
        <TextBox Text="{Binding ProductArticle}" Grid.Column="1" Grid.Row="1" Width="190" Height="25" HorizontalAlignment="Left" TextAlignment="Left" VerticalContentAlignment="Center"/>

        <TextBlock Text="Единица измерения " Grid.Column="0" Grid.Row="2" HorizontalAlignment="Right" VerticalAlignment="Center"/>
        <TextBox Text="{Binding ProductUnitOfMeasurment}" Grid.Column="1" Grid.Row="2" Width="190" Height="25" HorizontalAlignment="Left" TextAlignment="Left" VerticalContentAlignment="Center"/>

        <TextBlock Text="Цена " Grid.Column="0" Grid.Row="3" HorizontalAlignment="Right" VerticalAlignment="Center"/>
        <TextBox Text="{Binding ProductPrice}" Grid.Column="1" Grid.Row="3" Width="190" Height="25" HorizontalAlignment="Left" TextAlignment="Left" VerticalContentAlignment="Center"/>

        <TextBlock Text="Количество на складе " Grid.Column="0" Grid.Row="4" HorizontalAlignment="Right" VerticalAlignment="Center"/>
        <TextBox Text="{Binding ProductCountInStock}" Grid.Column="1" Grid.Row="4" Width="190" Height="25" HorizontalAlignment="Left" TextAlignment="Left" VerticalContentAlignment="Center"/>

        <TextBlock Text="Поставщик " Grid.Column="2" Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Center"/>
        <TextBox Text="{Binding ProductSupplier}" Grid.Column="3" Grid.Row="0" Width="190" Height="25" HorizontalAlignment="Left" TextAlignment="Left" VerticalContentAlignment="Center"/>

        <TextBlock Text="Производитель " Grid.Column="2" Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Center"/>
        <TextBox Text="{Binding ProductManufacturer}" Grid.Column="3" Grid.Row="1" Width="190" Height="25" HorizontalAlignment="Left" TextAlignment="Left" VerticalContentAlignment="Center"/>

        <TextBlock Text="Категория " Grid.Column="2" Grid.Row="2" HorizontalAlignment="Right" VerticalAlignment="Center"/>
        <ComboBox Name="CategoryComboBox" Grid.Column="3" Grid.Row="2" Width="190" Height="25" HorizontalAlignment="Left" VerticalContentAlignment="Center" 
                  SelectedValuePath="ProductCategoryID" SelectedValue="{Binding ProductCategoryID, Mode=TwoWay}">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding ProductCategoryName}"/>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

        <TextBlock Text="Скидка (%) " Grid.Column="2" Grid.Row="3" HorizontalAlignment="Right" VerticalAlignment="Center"/>
        <TextBox Text="{Binding ProductCurrentDiscount}" Grid.Column="3" Grid.Row="3" Width="190" Height="25" HorizontalAlignment="Left" TextAlignment="Left" VerticalContentAlignment="Center"/>

        <TextBlock Text="Описание " Grid.Column="0" Grid.Row="5" HorizontalAlignment="Right" VerticalAlignment="Top"/>
        <TextBox Text="{Binding ProductDescription}" Grid.Column="1" Grid.Row="5" Grid.RowSpan="2" Width="190" Height="60" HorizontalAlignment="Left" 
                 TextAlignment="Left" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>

        <TextBlock Text="Фото " Grid.Column="2" Grid.Row="4" HorizontalAlignment="Right" VerticalAlignment="Center"/>
        <Image Grid.Column="3" Grid.Row="4" Grid.RowSpan="3" Name="PhotoImage" Stretch="UniformToFill" Height="100" Width="130" VerticalAlignment="Top" HorizontalAlignment="Center">
            <Image.Source>
                <Binding Path="ProductPhoto">
                    <Binding.TargetNullValue>
                        <ImageSource>ress/picture.png</ImageSource>
                    </Binding.TargetNullValue>
                </Binding>
            </Image.Source>
        </Image>
        <Button Name="PhotoChangeButton" Content="Изменить фото" Grid.Column="3" Grid.Row="7" Click="PhotoChangeButton_Click" Width="190" Height="25" HorizontalAlignment="Left"/>

        <Button Name="SaveButton" Content="Сохранить" Click="SaveButton_Click" Grid.Row="7" Grid.ColumnSpan="2" Grid.Column="1" Width="190" Height="25" HorizontalAlignment="Center"/>
    </Grid>
</Page>