<Window x:Class="Verko_Shoes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Verko_Shoes"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" FontFamily="Times New Roman" Icon="ress/Icon.png" Background="#7FFF00">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>

        <Image Source="ress/Icon.png" HorizontalAlignment="Left"></Image>

        <TextBlock Text="Обувь" HorizontalAlignment="Center" FontSize="30" VerticalAlignment="Center"></TextBlock>

        <Frame Grid.Row="1" Name="MainFrame" NavigationUIVisibility="Hidden"  ContentRendered="MainFrame_ContentRendered"></Frame>

        <Button Content="Назад" Name="BtnBack" HorizontalAlignment="Right" FontSize="20" VerticalAlignment="Center" Click="BtnBack_Click"></Button>
    </Grid>
</Window>
